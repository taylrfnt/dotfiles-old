[[tooltips]]
  leading_diamond = ''
  trailing_diamond = ''
  template = ' {{ if .Name }} {{ .Name }}{{ else }} 󰭙 {{ end }}'
  foreground = '#193549'
  background = '#abc5fe'
  type = 'az'
  style = 'diamond'
  tips = ['az']

  [tooltips.properties]
    source = 'cli'

[[tooltips]]
  leading_diamond = ''
  trailing_diamond = ''
  template = '󰠳 {{ .Context }}{{ if .Namespace }} :: {{ .Namespace }}{{ end }}'
  foreground = '#193549'
  background = '#1352ab'
  type = 'kubectl'
  style = 'diamond'
  tips = ['kubectl', 'k']

[[tooltips]]
  leading_diamond = ''
  trailing_diamond = ''
  template = 'Helm {{ .Version }}'
  foreground = '#193549'
  background = '#a7cae1'
  type = 'helm'
  style = 'diamond'
  tips = ['helm', 'helmfile']

