## See https://ghostty.org/docs/config for official docs & option sets

# Theming
theme = catppuccin-mocha
# in case the themes change or packages get cleaned in the future...
# config-file = ?./catppuccin-mocha

# Fonts
font-family = CommitMono Nerd Font
font-size = 16
font-thicken = true
adjust-cell-height = 15%
font-feature=cv07

# Title
macos-titlebar-proxy-icon = hidden
title = " "

# Window
window-height = 35
window-width = 150

# mouse focus in ghostty native splits
#focus-follows-mouse = true

# override default macOS quitting
quit-after-last-window-closed = true

# copy on text selection
copy-on-select = true

# fix tmux-vim-navigate
keybind = alt+right=unbind
keybind = alt+left=unbind

## scrollback hack (until API makes release) ##
# pressing ctrl+f will paste the scrollback buffer into a
# file and the path into the prompt
keybind = ctrl+f=write_scrollback_file:paste
# now press super+f to open in your editor!
keybind = "super+f=text:\x1b[H ${EDITOR} \n"

